---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const backgroundLigth = "";
---

<Layout title="Edderson Vargas | FullStack Web Developer">
  <main>
    <section class="presentation">
      <h1 class="title">
        Hi, I'm <span class="container text-gradient">Edderson Vargas</span>
      </h1>
      <h2>Frontend Developer</h2>
      <p class="description">
        I build pixel-perfect, engaging, and accessible digital experiences.
      </p>
      <div class="links-box">
        <h2>Build Site</h2>
        <p class="description">
          Please visit my <span>LinkedIn</span>
          or download my <span>CV</span>, <span>Thanks!</span>
        </p>
        <div class="links">
          <a href="https://www.linkedin.com/in/edderson-vargas/" class="icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="30"
              height="30"
              viewBox="0 0 20 20"
              ><path
                fill="#ffffff"
                d="M10 .4C4.698.4.4 4.698.4 10s4.298 9.6 9.6 9.6s9.6-4.298 9.6-9.6S15.302.4 10 .4M7.65 13.979H5.706V7.723H7.65zm-.984-7.024c-.614 0-1.011-.435-1.011-.973c0-.549.409-.971 1.036-.971s1.011.422 1.023.971c0 .538-.396.973-1.048.973m8.084 7.024h-1.944v-3.467c0-.807-.282-1.355-.985-1.355c-.537 0-.856.371-.997.728c-.052.127-.065.307-.065.486v3.607H8.814v-4.26c0-.781-.025-1.434-.051-1.996h1.689l.089.869h.039c.256-.408.883-1.01 1.932-1.01c1.279 0 2.238.857 2.238 2.699z"
              ></path></svg
            >
          </a>
          <a href="/EddersonVargas-CV.pdf" download class="icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="30"
              height="30"
              viewBox="0 0 16 16"
              ><path
                fill="#ffffff"
                fill-rule="evenodd"
                d="M11.78 7.159a.75.75 0 0 0-1.06 0l-1.97 1.97V1.75a.75.75 0 0 0-1.5 0v7.379l-1.97-1.97a.75.75 0 0 0-1.06 1.06l3.25 3.25L8 12l.53-.53l3.25-3.25a.75.75 0 0 0 0-1.061M2.5 9.75a.75.75 0 0 0-1.5 0V13a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V9.75a.75.75 0 0 0-1.5 0V13a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5z"
                clip-rule="evenodd"></path></svg
            >
          </a>
        </div>
      </div>

      <script define:vars={{ backgroundLigth }}>
        const updateCursor = ({ x, y }) => {
          document.documentElement.style.setProperty("--x", Math.round(x));
          document.documentElement.style.setProperty("--y", Math.round(y));
        };

        document.body.addEventListener("pointermove", updateCursor);
      </script>

      <style define:vars={{ backgroundLigth }}>
        main {
          width: 100%;
          height: 100vh;
          color: #e2e8f0;
          font-size: 20px;
          line-height: 1.6;
          background: radial-gradient(
            600px at calc(var(--x) * 1px) calc(var(--y) * 1px),
            rgba(29, 78, 216, 0.15),
            transparent 80%
          );
        }

        .container {
          width: 80%;
          margin: auto;
        }

        .links-box {
          margin-top: 20px;

          background-color: #69696900;
          padding: 20px 30px;
          border-radius: 30px;
          box-shadow: 0 0 15px 0 rgba(255, 255, 255, 0.5);

          h2 {
            color: rgba(112, 148, 249, 0.95);
          }
        }

        .links-box p span {
          font-weight: 800;
        }

        .links {
          display: flex;
          gap: 10px;
          cursor: pointer;
          margin: 10px 0;
        }

        .links a:hover {
          opacity: 0.5;
          transition: ease-in-out 0.2s;
        }
        .presentation {
          display: flex;
          width: 80%;
          margin: auto;
          flex-direction: column;
          justify-content: center;
          align-items: flex-start;
          height: 100vh;
        }
        .icon {
          display: block;
          width: 30px;
          height: 20px;
        }
        h1 {
          font-size: 3rem;
          font-weight: 700;
          line-height: 1;
          margin-bottom: 0.3em;
          text-shadow: 1px 1px 1px #121111ad;
        }
        h2 {
          font-size: 1.3rem;
        }

        .text-gradient {
          color: rgb(var(--accent));
        }
        .description {
          font-size: 0.8rem;
        }
      </style>
    </section>
  </main>
</Layout>
